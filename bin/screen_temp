#!/bin/sh
# Change the -l flag to your own coordinates (longitude/latitude),
# to have redshift turn on from sun down to sun up local time
# Check www.latlong.com for values.
redshift -l 55.67594:12.56553 &
clear
notify-send 'Redshift:' 'Automatic screen temperature has been activated'
echo 'Red Shift - Automatic screen temperature has been set'
