bindsym $mod+Shift+d exec --no-startup-id dmenu_run_desktop -fn 'FantasqueSansMono Nerd Font-12' -nb '#191724' -nf '#e0def4' -sb '#ebbcba' -sf '#191724'
bindsym $mod+space exec --no-startup-id dmenu_run -fn 'FantasqueSansMono Nerd Font-12' -nb '#191724' -nf '#e0def4' -sb '#ebbcba' -sf '#191724'
bindsym $mod+ctrl+space exec --no-startup-id dmenu run -fn 'FantasqueSansMono Nerd Font-12' -nb '#191724' -nf '#e0def4' -sb '#ebbcba' -sf '#191724'
bindsym $mod+e exec --no-startup-id $HOME/.local/bin/dmenuunicode
